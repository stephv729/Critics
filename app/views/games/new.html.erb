<div class="container p-0-1">
  <h1 class="heading--sm mb-4">New Game</h1>
  <% if @game.errors.any? %>
    <h2 class="error-400 heading-xs">Something went wrong:</h2>
    <ul>
      <% @game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %> 
  <%= render "form", game: @game %>
  <div class = "center">
    <%= link_to "Back", games_path %>
  </div>
</div>
