<% available_critics = @game.available_critics(current_user.id,current_user.role)%>
<div class="p-0-1">
  <%= image_tag(@game.cover,:class =>"game-cover--show")%> 
  <div class="game-content__show flex-between">
    <div>
      <%= @game.name %>
      <%= @game.release_date.year if @game.release_date %> 
    </div>
    <div class="btn-rating white flex-center-items"><%= @game.rating%></div>
  </div>

  <div class="flex flex-between text-center mb-2">
    <%= link_to "Game Details", @game, class: "not-selected  w-full"%>
    <%= link_to "Critics (#{available_critics.length})", game_critics_path(id: @game.id), class: "selected  w-full" %>
  </div>
    
  <%= render "critics/error_messages", errors: @errors %>

  <%= render "critics/form", type: "Game", id: @game, critics: available_critics %>

  <p class="text-center"><%=link_to "Back", games_path %></p>
</div>